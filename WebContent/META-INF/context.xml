<?xml version='1.0' encoding='utf-8'?>
<Context>
 <Resource name="jdbc/SqlPool"
         auth="Container"
         driverClassName="com.mysql.jdbc.Driver"
         type="javax.sql.DataSource"
         url="jdbc:mysql://localhost:3306/"
         username="root"
         password="123456"
         maxActive="500" 
         maxIdle="50"  
         maxWait="10000" />
</Context>
<!--maxActive是指连接池的最大数据库连接数  -->
<!--maxIdle是指连接池的最大闲置连接数，其实也就是数据库连接池中可以有maxIdle个闲置备用的连接-->